@model KASCFlightLog.ViewModels.UserDashboardViewModel

@{
    ViewData["Title"] = "User Dashboard";
}

<div class="container">
    <div class="row">
        <!-- My Flight Logs -->
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0">My Flight Logs</h5>
                    <button class="btn btn-primary btn-sm" data-bs-toggle="modal" 
                            data-bs-target="#addFlightLogModal">
                        Add New Log
                    </button>
                </div>
                <div class="card-body">
                    @if (!Model.MyFlightLogs.Any())
                    {
                        <p>No flight logs found</p>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Date</th>
                                        <th>Route</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var log in Model.MyFlightLogs)
                                    {
                                        <tr>
                                            <td>@log.FlightDate.ToString("d")</td>
                                            <td>@log.From - @log.To</td>
                                            <td>
                                                <span class="badge bg-@(log.Status == "Published" ? "success" : 
                                                    log.Status == "Pending" ? "warning" : "danger")">
                                                    @log.Status
                                                </span>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Published Flights -->
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Recent Published Flights</h5>
                </div>
                <div class="card-body">
                    @if (!Model.PublishedFlightLogs.Any())
                    {
                        <p>No published flights found</p>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Date</th>
                                        <th>Pilot</th>
                                        <th>Route</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var log in Model.PublishedFlightLogs)
                                    {
                                        <tr>
                                            <td>@log.FlightDate.ToString("d")</td>
                                            <td>@log.User.FirstName @log.User.LastName</td>
                                            <td>@log.From - @log.To</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Add Flight Log Modal -->
<div class="modal fade" id="addFlightLogModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add New Flight Log</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="addFlightLogForm">
                    <div class="mb-3">
                        <label class="form-label">Flight Date</label>
                        <input type="date" class="form-control" name="flightDate" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Aircraft Registration</label>
                        <input type="text" class="form-control" name="aircraftRegistration" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Departure Location</label>
                        <input type="text" class="form-control" name="departureLocation" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Arrival Location</label>
                        <input type="text" class="form-control" name="arrivalLocation" required>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" onclick="submitFlightLog()">Submit</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        async function submitFlightLog() {
            const form = document.getElementById('addFlightLogForm');
            const formData = new FormData(form);

            try {
                const response = await fetch('/api/flightlogs', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        flightDate: formData.get('flightDate'),
                        aircraftRegistration: formData.get('aircraftRegistration'),
                        departureLocation: formData.get('departureLocation'),
                        arrivalLocation: formData.get('arrivalLocation')
                    })
                });

                if (response.ok) {
                    $('#addFlightLogModal').modal('hide');
                    location.reload();
                } else {
                    alert('Error submitting flight log');
                }
            } catch (error) {
                console.error('Error:', error);
                alert('Error submitting flight log');
            }
        }
    </script>
}